FROM ubuntu:22.04
# The point of this is to use a combined docker that can run tools off /tool volume share

ARG DOCKER_USER=ci
ARG DOCKER_USER_UID=1000 #deliberately chosen to allign with gitlab-runner UID which should make file permissions easier
ARG DOCKER_USER_GID=1000 #deliberately chosen to allign with gitlab-runner UID which should make file permissions easier


ENV XLNX_INSTALL_LOCATION=/tools/Xilinx
ENV DEBIAN_FRONTEND=noninteractive  
RUN apt-get update
RUN dpkg --add-architecture i386 
RUN apt-get update 
RUN apt-get upgrade -y
# petalinux base dependencies
RUN apt-get install -y \
		tofrodos \
		iproute2 \
		gawk \
		xvfb \
		git \
		make \
		net-tools \
		libncurses5-dev \
		update-inetd \
		tftpd \
		zlib1g-dev:i386 \
		libssl-dev \
		flex \
		bison \
		libselinux1 \
		gnupg \
		wget \
		diffstat \
		chrpath \
		socat \
		xterm \
		autoconf \
		libtool \
		libtool-bin \
		libtinfo5 \
		sudo \
		tar \
		libtcmalloc-minimal4 \
		unzip \
		texinfo \
		zlib1g-dev \
		gcc-multilib \
		build-essential \
		libsdl1.2-dev \
		libglib2.0-dev \
		screen \
		pax \
		gzip \
		python3-gi \
		less \
		lsb-release \
		fakeroot \
		libgtk2.0-0 \
		libgtk2.0-dev \
		cpio \
		rsync \
		xorg \
		expect \
		dos2unix \
		google-perftools \
		default-jre \
		locales \
         && apt-get clean
RUN locale-gen en_US.UTF-8
ENV LANG en_US.UTF-8
ENV LANGUAGE en_US:en
ENV LC_ALL en_US.UTF-8

# Ensure sudo group users are not
# asked for a password when using
# sudo command by ammending sudoers file
RUN echo '%sudo ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

RUN useradd -m -u $DOCKER_USER_UID -g $DOCKER_USER_GID $DOCKER_USER
RUN usermod -a -G sudo $DOCKER_USER
USER $DOCKER_USER
ENV LD_PRELOAD=/usr/lib/libtcmalloc_minimal.so.4

# The user will need to volume mount tools at /tools
# tools should have this structure to the settings64.sh
# /tools/Xilinx/Vivado/2023.2/settings64.sh
COPY start_vivado.sh /opt
ENTRYPOINT ["/opt/start_vivado.sh"]

